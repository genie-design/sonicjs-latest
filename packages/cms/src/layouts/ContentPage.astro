---
import Layout from './Layout.astro';
import Menu from '@/components/Menu.astro';
interface Props {
  title?: string;
}

const { title = 'Content' } = Astro.props;
---

<Layout title={title}>
  <div class="relative min-h-screen">
    <!-- Main Layout Grid -->
    <div class="grid min-h-screen gap-4 p-4 lg:grid-cols-[250px_1fr]">
      <Menu />
      <!-- Main Content Area -->
      <main
        class="bg-secondary flex min-h-[80vh] flex-col items-center gap-8 rounded-3xl p-8 backdrop-blur-sm"
      >
        <div class="flex justify-center">
          <a href="/" class="inline-block">
            <img
              src="/sonicjs-logo.svg"
              alt="SonicJS Logo"
              class="h-12 w-auto"
            />
          </a>
        </div>
        <div class="w-full flex-1">
          <slot />
        </div>
      </main>
    </div>
  </div>
</Layout>
