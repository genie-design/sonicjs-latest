{
  "name": "sonicjs-monorepo",
  "private": true,
  "scripts": {
    "dev:cms": "pnpm --filter @sonicjs/cms dev",
    "dev:server": "pnpm --filter @sonicjs/tinybase-server dev",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "tinybase@5.4.8": "patches/tinybase@5.4.8.patch"
    }
  }
}
